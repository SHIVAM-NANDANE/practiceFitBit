<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout

            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#020D53"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Cards.Card6">

    <include layout="@layout/common_toolbar"/>

    <ImageButton
            android:id="@+id/logoutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:background="#020D53"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginTop="10dp"
    />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:text="Jumping Ropes"
                  android:id="@+id/textview6"
                  android:gravity="center"
                  android:layout_marginTop="50dp"
                  android:textColor="@color/white"
                  android:textSize="25sp"
                  android:textStyle="bold"
        />


        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/Skipping"
                android:layout_width="410dp"
                android:layout_height="300dp"
                android:src="@drawable/skipping"
                android:layout_below="@+id/textview6"
                android:scaleType="fitXY"

        />


    <TextView android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:id="@+id/jumpingscroll"
              android:paddingTop="25sp"
              android:gravity="center"
              android:text="@string/jumpingrope"
              android:textColor="#FDFDFD"
              android:scrollbars="vertical"
              android:textSize="18dp"
              android:layout_below="@+id/Skipping"
              android:layout_marginTop="11dp"/>



    </RelativeLayout>
