<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeScreen"
            android:background="#020D53">
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeScreen"
        android:background="#020D53"
        android:padding="10dp">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FitBit"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/white"
    >
    </TextView>
    <ImageButton android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:id="@+id/dietlogo"
                 android:layout_marginLeft="300dp"
                 android:background="@color/purple_700"
                 android:src="@drawable/dietlogo"
                 android:scaleType="fitXY"

    />

    <ImageButton
            android:id="@+id/logoutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:background="@color/purple_700"
            android:src="@drawable/ic_baseline_logout_24"
    />
    


    <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#020D53"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="10dp"
    >

        <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chinup"

        />


    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card1"
              android:textColor="@color/white"
              android:text="Pull-Up"
              android:textSize="19dp"
              android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#020D53"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="210dp"
            app:cardCornerRadius="10dp"
    >

        <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dumbellsquat"

        />
    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card2"
              android:textColor="@color/white"
              android:text="Squats"
              android:textSize="19dp"
              android:layout_marginLeft="210dp"
              android:gravity="center"
    />

        <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:background="#020D53"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="260dp">

            <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pushup"

            />

        </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card3"
              android:textColor="@color/white"
              android:text="Push-Up"
              android:textSize="19dp"
              android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#020D53"
            android:layout_marginTop="260dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="210dp">

        <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bicepcurls"

        />

    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card4"
              android:textColor="@color/white"
              android:text="Bicep"
              android:textSize="19dp"
              android:layout_marginLeft="210dp"
              android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#020D53"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="460dp">

        <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crunches"

        />

    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card5"
              android:textColor="@color/white"
              android:text="Abs"
              android:textSize="19dp"
              android:gravity="center"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:background="#020D53"
            android:layout_marginTop="460dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="210dp">

        <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/skipping"

        />

    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="180dp"
              android:layout_height="40dp"
              android:layout_below="@+id/card6"
              android:textColor="@color/white"
              android:text="Skipping"
              android:textSize="19dp"
              android:layout_marginLeft="210dp"
              android:gravity="center"
    />

    <ImageView android:layout_width="match_parent"
               android:id="@+id/rotatingimage"
               android:layout_height="100dp"
               android:src="@drawable/text"
               android:layout_marginTop="650dp"

    />


</RelativeLayout>
</ScrollView>