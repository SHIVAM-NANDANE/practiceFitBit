<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#020D53"
        tools:context=".Card1">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:title="@string/app_name"
                                       app:titleTextColor="@color/white"
                                       android:background="#020D53"

    />

    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/accountlogo"
            android:layout_marginLeft="300dp"
            android:background="#020D53"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"


    />

    <ImageButton
            android:id="@+id/logoutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="350dp"
            android:background="#020D53"
            android:src="@drawable/ic_baseline_logout_24"
            android:layout_marginTop="10dp"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pull up"
              android:id="@+id/textview1"
              android:layout_marginTop="50dp"
              android:gravity="center"
              android:textColor="@color/white"
              android:textSize="25sp"
              android:textStyle="bold"
    />


    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/pullup1"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/chinup"
            android:layout_below="@+id/textview1"
            android:scaleType="fitXY"

    />


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/pullupscroll"
              android:paddingTop="25sp"
              android:scrollbars="vertical"
              android:text="@string/Pullup"
              android:gravity="center"
              android:textColor="#FDFDFD"
              android:textSize="18dp"
              android:layout_below="@+id/pullup1"
              android:layout_marginTop="11dp"/>

</RelativeLayout>
